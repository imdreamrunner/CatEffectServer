# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                               controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

# AuthAction Module

# OFS APIs
POST        /ofs/managers/add               controllers.OFS.add()
POST        /ofs/managers/:id/edit          controllers.OFS.edit(id: Int)
POST        /ofs/managers/:id/delete        controllers.OFS.delete(id: Int)
POST        /ofs/managets/:id               controllers.OFS.show(id: Int)
POST        /ofs/managers/list              controllers.OFS.list()

POST        /ofs/test                       controllers.OFS.test()
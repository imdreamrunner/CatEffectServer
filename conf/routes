# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                               controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

####################
# SystemController #
####################
# Authentication
POST        /system/auth                       controllers.SystemController.auth()

# Manage Managers
POST        /system/managers/add               controllers.SystemController.addManager()
POST        /system/managers/:id/edit          controllers.SystemController.editManager(id: Int)
POST        /system/managers/:id/delete        controllers.SystemController.deleteManager(id: Int)
POST        /system/managets/:id               controllers.SystemController.showManager(id: Int)
POST        /system/managers/list              controllers.SystemController.listManager()

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                               controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

####################
# SystemController #
####################
# Authentication
POST        /system/auth                       controllers.SystemController.auth()

# Manage Managers
POST        /system/managers/add               controllers.SystemController.addManager()
POST        /system/managers/edit/:id          controllers.SystemController.editManager(id: Int)
POST        /system/managers/delete/:id        controllers.SystemController.deleteManager(id: Int)
POST        /system/managets/getOne/:id        controllers.SystemController.getOneManager(id: Int)
POST        /system/managets/getAll            controllers.SystemController.getAllManagers()
POST        /system/managers/list              controllers.SystemController.listManager()

